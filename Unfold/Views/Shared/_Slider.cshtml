@{
    var b = (List<DataBaseEntity.DAO.SliderTblDAO>)ViewData["slider"];

}



@foreach (var slider in b)
{
    <div class="cover-v1 jarallax" style="background-image: url('@slider.Slider_Image');" id="home-section">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-md-7 mx-auto text-center">
                    <h1 class="heading gsap-reveal-hero"> @slider.Slider_Title </h1>
                    <h2 class="subheading gsap-reveal-hero">
                        @slider.Slider_Content
                    </h2>
                </div>

            </div>
        </div>


        <a href="#portfolio-section" class="mouse-wrap smoothscroll">
            <span class="mouse">
                <span class="scroll"></span>
            </span>
            <span class="mouse-label">Daha Fazlası..</span>
        </a>

    </div>
}