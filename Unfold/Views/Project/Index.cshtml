@{
    var a = (DataBaseEntity.DAO.PortfolioTblDAO)ViewData["project"];
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">


<body data-spy="scroll" data-target=".site-nav-target" data-offset="200">
    <div class="cover-v1 jarallax overlay" style="background-image: url('images/work_1_full.jpg');">


        <div class="unslate_co--site-wrap">

            <div class="unslate_co--site-inner">
                <div class="container">
                    <div class="portfolio-single-wrap unslate_co--section" id="portfolio-single-section">
                        <div class="portfolio-single-inner">

                            <h2 class="heading-portfolio-single-h2"> @a.Portfolio_Title</h2>

                            <div class="row justify-content-between align-items-stretch">

                                <div class="col-lg-8">
                                    <p><a href="images/work_3_a_full.jpg" data-fancybox="gal"><img src="@a.Portfolio_Image" alt="Image" class="img-fluid"></a></p>
                                     @*<p><a href="images/work_3_full.jpg" data-fancybox="gal"><img src="images/work_3_full.jpg" alt="Image" class="img-fluid"></a></p>*@
                                </div>
                                <div class="col-lg-4 pl-lg-5">
                                    <div class="unslate_co--sticky">
                                        <div class="row">
                                            <div class="col-md-12 mb-4">
                                                <div class="detail-v1">
                                                    <span class="detail-label"> @a.Portfolio_Title </span>
                                                    <p>@a.Portfolio_Content</p>
                                                </div>
                                            </div>

                                            <div class="col-md-12 mb-4">
                                                <div class="detail-v1">
                                                    <span class="detail-label">Proje Tarihi</span>
                                                    <span class="detail-val">@a.Portfolio_Date </span>
                                                </div>
                                            </div>
                                          
                                            <div class="col-md-12 mb-4">
                                                <div class="detail-v1">
                                                    <span class="detail-label">Müşteri</span>
                                                    <span class="detail-val">@a.Portfolio_Client</span>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-4">
                                                <div class="detail-v1">
                                                    <span class="detail-label">Proje Link</span>
                                                    <span class="detail-val"><a href="#">@a.Portfolio_URL/</a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</body>

</html>
